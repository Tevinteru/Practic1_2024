@model IEnumerable<Practic1_2024.Models.Smartphone>

<h2>Все смартфоны</h2>

<a href="@Url.Action("Create", "Smartphones")">Добавить новый товар</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var smartphone in Model)
        {
            <tr>
                <td>@smartphone.Name</td>
                <td>@smartphone.Price</td>
                <td>@smartphone.Category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Smartphones", new { id = smartphone.Id })">Редактировать</a> |
                    <a href="@Url.Action("Delete", "Smartphones", new { id = smartphone.Id })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

